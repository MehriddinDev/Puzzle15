<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text_Style">

    <item name="android:layout_width">0dp</item>

    <item name="android:layout_weight">1</item>

    <item name="android:layout_height">wrap_content</item>

    <item name="android:textColor">@color/white</item>

</style>


    <style name="Text_Style.StepCounter">

    <item name="android:textColor">#009688</item>

    <item name="android:textSize">16sp</item>

    <item name="android:textStyle">bold</item>

</style>


    <style name="PuzzleBottom">

    <item name="android:layout_width">80dp</item>

    <item name="android:layout_height">80dp</item>

    <item name="android:textColor">#FFFFFF</item>

    <item name="fontFamily">@font/baloo</item>

    <item name="android:textSize">38sp</item>

    <item name="android:layout_margin">4dp</item>

    <item name="android:background">@drawable/bg_bottom</item>

</style>


    <style name="ShuffleStyle">

    <item name="android:background">@drawable/ic_baseline_refresh_24</item>

    <item name="android:layout_width">32dp</item>

    <item name="android:layout_height">32dp</item>

</style>


    <style name="ButtonRaw">

    <item name="android:weightSum">5</item>

    <item name="android:orientation">horizontal</item>

    <item name="android:layout_width">match_parent</item>

    <item name="android:gravity">center</item>

    <item name="android:layout_height">0dp</item>

    <item name="android:layout_weight">1</item>

    <item name="marginHorizontal">10dp</item>

</style>


    <style name="MyPuzzleBottom">

    <item name="android:layout_width">80dp</item>

    <item name="android:layout_height">80dp</item>

    <item name="android:textColor">@color/white</item>

    <item name="android:textStyle">bold</item>

    <item name="background">@drawable/bg_bottom</item>

    <item name="android:clickable">true</item>

    <item name="android:textSize">24sp</item>

    <item name="android:layout_margin">6dp</item>

    <item name="android:layout_marginBottom">6dp</item>

    <item name="android:background">@drawable/bg_bottom</item>

</style>


    <style name="alertDialog">

    <item name="android:color">#04322D</item>

    <item name="android:layout_width">wrap_content</item>

    <item name="android:layout_height">wrap_content</item>

</style>


    <style name="ThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">

    <item name="android:windowTranslucentStatus">true</item>

    <item name="android:windowTranslucentNavigation">true</item>

</style>
</resources>